{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react-jsx",
    "strict": true,
    /* Lib to use while compiling */
    "lib": [
      "ES2017",
      "DOM"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    /* Testing lib  */
    "baseUrl": "src",
    "paths": {
      "test-utils": [
        "./utils/test-utils"
      ]
    },
    /* Decorators support */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Build */
    "declaration": true,
    "incremental": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    /* Code Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
